{
  "name": "BBcatcher",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Brings all you Exams quiz's and homework to your schedule ",
  "icons": {
    "64": "icons/icon.png"
  },
  "background": {
    "scripts": [
      "background/main.js",
      "background/authorize.js",
      "background/userinfo.js"
    ]
  },
  "permissions": [
    "<all_urls>",
    "webNavigation",
    "tabs",
    "activeTab",
    "identity",
    "notifications",
    "*://www.googleapis.com/*",
    "*://accounts.google.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://learn.humber.ca/ultra/*"],
      "js": ["scripts/content_scripts.js"],
      "css": ["styles/content_script.css"],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_title": "BBcatcher",
    "default_popup": "popup/popup.html"
  }
}
